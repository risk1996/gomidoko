{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["./src/entry-client.tsx"],
    "rules": {
      "a11y": {
        "noLabelWithoutControl": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": ["class"],
            "functions": ["cn"]
          }
        }
      },
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
